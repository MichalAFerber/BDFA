<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Buy Direct From Authors</title>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body>

    <header class="border-bottom">
        <nav class="navbar navbar-expand">
            <form class="container-fluid search-form">
                <a class="navbar-brand" href="/">
                    <i class="fa-solid fa-house"></i>
                </a>
                <input class="search-input form-control text-center me-2" type="search" placeholder="Search" aria-label="Search">
                <a asp-page="/FAQ" class="btn btn-primary text-nowrap" role="button">Authors Click Here</a>
            </form>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-4 pt-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <nav class="navbar">
            <div class="container-fluid">
                <span class="navbar-text text-muted">
                    &copy; @DateTime.Now.Year Buy Direct From Authors. All rights reserved.</span>
                <span class="nav-link text-muted">
                    <a asp-page="/Privacy">Privacy</a> - <a asp-page="/Terms">Terms</a> - <a asp-page="/FAQ">FAQs</a></span>
                <span class="navbar-text text-muted">
                    Site designed and maintained by <a href="https://ari-integration.com" target="_blank">Ari Integration</a></span>
            </div>
        </nav>
    </footer>

    <script>
        document.querySelectorAll('.search-input').forEach(input => {
            input.addEventListener('input', function () {
                var searchQuery = input.value;

                fetch(`/Index?handler=ProfilesPartial&searchQuery=${encodeURIComponent(searchQuery)}`)
                    .then(response => response.text())
                    .then(html => {
                        document.getElementById('profilesContainer').innerHTML = html;
                    })
                    .catch(error => console.error('Error:', error));
            });
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
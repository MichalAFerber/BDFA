<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["TitlePage"]</title>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fortawesome/fontawesome-free@6.6.0/css/fontawesome.min.css" integrity="sha256-XfA0ppGOANs88Ds+9FqVLy3xIGzT/25K/VLmRRxE9ow=" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@@fortawesome/fontawesome-free@6.6.0/js/all.min.js" integrity="sha256-qq1ob4lpAizCQs1tkv5gttMXUlgpiHyvG3JcCIktRvs=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true">
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
</head>
<body>

    <header>
        <div class="container text-center">
            <div class="p-4">
                <a title="Buy Direct From Authors" href="/" class="navbar-brand"><img src="img/banner.png" class="img-fluid border shadow" alt="Buy Direct From Authors" /></a>
            </div>
        </div>
    </header>

    <div class="container">
        <div><h1>@ViewData["TitleBody"]</h1></div>

        <main role="main" class="pb-4 pt-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="text-muted justify-content-center text-center ps-4 pe-4">
            Authors, please email <a href="mailto:admin@buydirectfromauthors.com">admin@buydirectfromauthors.com</a> if you would like to list your direct store on our site.
        </div>

        <nav class="navbar">
            <div class="container-fluid">
                <span class="navbar-text text-muted">
                    &copy; @DateTime.Now.Year Buy Direct From Authors. All rights reserved.
                </span>
                <span class="nav-link text-muted justify-content-center text-center">
                    <a asp-page="/Privacy">Privacy</a> - <a asp-page="/Terms">Terms</a> - <a asp-page="/FAQ">FAQs</a>
                </span>
                <span class="navbar-text text-muted">
                    Site designed and maintained by <a href="https://techguywithabeard.com/" target="_blank">TechGuyWithABeard</a>
                </span>
            </div>
        </nav>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

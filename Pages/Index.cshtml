@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">

    <div class="container p-4">
        <div class="row p-4 align-items-center rounded-3 border shadow-lg">
            <div class="col">
                <h1 style="color:#E4405F">Buy Direct From Authors</h1>
            </div>
        </div>
    </div>

    <div class="container p-4">
        <div class="card">
            <div class="card-header fw-bold">
                Featured Authors
            </div>
            <div class="card-body">
                <div class="row justify-content-center row-cols-1 row-cols-md-3 g-4">
                    @foreach (var featuredAuthor in Model.FeaturedAuthors)
                    {
                        <div class="col d-flex align-items-stretch">
                            <div class="card">
                                @if (featuredAuthor.UrlStore != null)
                                {
                                    <a href="@featuredAuthor.UrlStore" target="_blank" title="Author's Direct Store"><img src="./i/@featuredAuthor.Image" class="card-img-top pt-4 image-profile-featured" alt="@featuredAuthor.Author"></a>
                                }
                                <div class="card-body">
                                    @if (featuredAuthor.Author != null)
                                    {
                                        <h5 class="card-title">@featuredAuthor.Author</h5>
                                    }
                                    @if (featuredAuthor.Tagline != null && featuredAuthor.Tags != null)
                                    {
                                        <p class="card-text">
                                            @featuredAuthor.Tagline
                                            <br /><br /><i class="fa-solid fa-hashtag fa-lg"></i>&nbsp;@featuredAuthor.Tags
                                        </p>
                                    }
                                </div>
                                <div class="card-link" style="padding: 15px;">
                                    @if (featuredAuthor.UrlStore != null)
                                    {
                                        <p><a href="@featuredAuthor.UrlStore" target="_blank" type="button" class="btn btn-primary">Author's Direct Store</a></p>
                                        <a href="@featuredAuthor.UrlStore" class="me-1" target="_blank" title="Author's Direct Store"><i class="fa-solid fa-store fa-lg me-0" style="color: #212121;"></i></a>
                                    }
                                    @if (featuredAuthor.UrlNewsletter != null)
                                    {
                                        <a href="@featuredAuthor.UrlNewsletter" class="me-1" target="_blank" title="Author Newsletter"><i class="fa-solid fa-envelope-open fa-lg me-0" style="color: #25D366;"></i></a>
                                    }
                                    @if (featuredAuthor.UrlFBPage != null)
                                    {
                                        <a href="@featuredAuthor.UrlFBPage" class="me-1" target="_blank" title="Facebook Page"><i class="fa-brands fa-facebook fa-lg" style="color: #1877F2;"></i></a>
                                    }
                                    @if (featuredAuthor.UrlFBGroup != null)
                                    {
                                        <a href="@featuredAuthor.UrlFBGroup" class="me-1" target="_blank" title="Facebook Group"><i class="fa-brands fa-square-facebook fa-lg" style="color: #1877F2;"></i></a>
                                    }
                                    @if (featuredAuthor.UrlIG != null)
                                    {
                                        <a href="@featuredAuthor.UrlIG" class="me-1" target="_blank" title="Instagram"><i class="fa-brands fa-instagram fa-lg" style="color: #E4405F;"></i></a>
                                    }
                                    @if (featuredAuthor.UrlTikTok != null)
                                    {
                                        <a href="@featuredAuthor.UrlTikTok" class="me-1" target="_blank" title="TikTok"><i class="fa-brands fa-tiktok fa-lg" style="color: #69C9D0;"></i></a>
                                    }
                                    @if (featuredAuthor.UrlThreads != null)
                                    {
                                        <a href="@featuredAuthor.UrlThreads" class="me-1" target="_blank" title="Threads"><i class="fa-brands fa-threads fa-lg" style="color: #1877F2;"></i></a>
                                    }
                                    @if (featuredAuthor.UrlX != null)
                                    {
                                        <a href="@featuredAuthor.UrlX" class="me-1" target="_blank" title="X"><i class="fa-brands fa-x-twitter fa-lg" style="color: #000000;"></i></a>
                                    }
                                    @if (featuredAuthor.UrlOther != null)
                                    {
                                        <a href="@featuredAuthor.UrlOther" class="me-1" target="_blank" title="Additional Author Link"><i class="fa-solid fa-link fa-lg" style="color: #FF4500;"></i></a>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="container p-4">
        <div class="card">
            <div class="card-header fw-bold">
                Featured Deals
            </div>
            <div class="card-body">

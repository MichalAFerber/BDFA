                                    }
                                    @if (featuredDeals.UrlOther != null)
                                    {
                                        <a href="@featuredDeals.UrlOther" class="me-1" target="_blank" title="Additional Author Link"><i class="fa-solid fa-link fa-lg" style="color: #FF4500;"></i></a>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="container p-4">
        <div class="row p-4 align-items-center rounded-3 border shadow-lg">
            <div class="col">
                <div class="row">
                    <p class="h4">Search to find our awesome authors!</p>
                </div>
                <div class="row d-grid d-md-flex">
                    <form class="search-form form-inline">
                        <input class="search-input form-control text-center" type="search" placeholder="Search here by keyword (examples: steamy romance, cozy mystery, sci-fi)" aria-label="Search">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container p-4">
        <div id="profilesContainer" class="row justify-content-center row-cols-1 row-cols-md-5 g-4">
            @await Html.PartialAsync("_ProfilesList", Model.Profiles)
        </div>
    </div>

</div>